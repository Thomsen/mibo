<%= simple_form_for :user, :html => {:id => 'userform' }, url: users_path do |f| %>

  <%= f.error_notification %>
  <%= f.input :username, placeholder: 'Username' %>
  <%= f.input :email, placeholder: 'Email' %>
  <%= f.input :password, placeholder: "Password" %>
  <%= f.input :password_confirm, placeholder: "Password Confirm" %>
  <%= f.button :submit, "Sign up" %>
  <%= link_to "Sign in", users_login_path, :class => 'btn btn-default' %>

<% end %>
