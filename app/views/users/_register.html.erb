<%= form_for :user, :html => {:id => 'signupform', :class => 'form-horizontal', :role => 'form'}, url: users_path do |f| %>

<% if @user.errors.any? %>

<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved.</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li> <%= msg %></li>
    <% end %>
  </ul>
</div>

<% end %>

<div class="container-fluid">
  <div class="register_portrait">

    <%#= f.file_field :portrait_uri, class: "portrait_browser" #%>
  </div>
  <div class="register_info">
    <div class="form-group">
      <%= f.label :username, class: "col-sm-3 control-label" %>
      <div class="col-lg-7">
        <%= f.text_field :username, class: "form-control required" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-3 control-label" %>
      <div class="col-lg-7">
        <%= f.text_field :email, class: "form-control required email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-sm-3 control-label" %>
      <div class="col-lg-7">
        <%= f.password_field :form_password, class: "form-control required" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Confirm Password", class: "col-sm-3 control-label" %>
      <div class="col-lg-7">
        <%= f.password_field :password_confirm, class: "form-control required" %>
      </div>
      <div class="col-sm-2 status"> </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
        <%= f.submit "Sign Up", class: "btn btn-default" %>
        <%= link_to "Sign in",  users_login_path, :class => 'btn btn-default' %>
      </div>

    </div>
  </div>
</div>

<% end %>
