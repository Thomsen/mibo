
<%= form_for :session, :html => {:class => 'form-horizontal', :role => 'form'}, :url => sessions_path do |f| %>
  <div class="form-group">
    <%= f.label :username, class: "col-sm-3 control-label col-md-offset-0" %>
    <div class="col-sm-9">
      <%= f.text_field :username, class: "form-control required" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-3 control-label col-md-offset-0" %>
    <div class="col-sm-9">
      <%= f.password_field :password, class: "form-control required" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 col-md-offset-1" >
      <%= f.submit "Confirm", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
