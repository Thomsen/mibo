<% flash.each do |name, msg| %>

  <% if msg.is_a?(String) %>
  <div class="alert alert-<%= name.to_s == 'notice' ? 'sucess' : 'danger' %>">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">%times;</button>
    <%= content_tag :div, msg, :id => "flash #{name}" %>
  </div>
  <% end %>

<% end %>