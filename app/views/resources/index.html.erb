<h1>Listing resources</h1>

<table>
  <thead>
    <tr>
      <th>Res name</th>
      <th>Res uri</th>
      <th>Res uri</th>
      <th>Res desc</th>
      <th>Respacket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.res_name %></td>
        <td><%= resource.res_uri %></td>
        <td><%= resource.res_uri %></td>
        <td><%= resource.res_desc %></td>
        <td><%= resource.respacket_id %></td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

