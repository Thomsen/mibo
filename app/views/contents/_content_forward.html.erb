<%= form_for :forward, :html=> {:class => 'form-horizontal', :role => 'form'}, url: contents_forward_path do |f| %>
  <%= f.hidden_field :source_id, :value => content.id %>
  <!-- forward.hidden_field format chaos -->
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_field :text, class: "form-control", placeholder: "Add a forward..." %>
    </div>
    <button class="btn btn-default col-sm-2">
      <i class="glyphicon glyphicon-share"></i>
    </button>
  </div>
<% end %>