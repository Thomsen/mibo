<%= form_for :user, :html => {:id => 'signupform', :class => 'form-horizontal', :role => 'form'}, url: user_create_path do |f| %>

<% if @user.errors.any? %>

<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved.</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li> <%= msg %></li>
    <% end %>
  </ul>
</div>

<% end %>

<div class="form-group">
  <%= f.label :username, class: "col-sm-2 control-label col-md-offset-7" %>
  <div class="col-lg-2">
    <%= f.text_field :username, class: "form-control required" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-2 control-label col-md-offset-7" %>
  <div class="col-lg-2">
    <%= f.text_field :email, class: "form-control required email" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password, class: "col-sm-2 control-label col-md-offset-7" %>
  <div class="col-lg-2">
    <%= f.password_field :password, class: "form-control required" %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Confirm Password", class: "col-sm-2 control-label col-md-offset-7" %>
  <div class="col-lg-2">
    <%= f.password_field :pmassword_confirm, class: "form-control required" %>
  </div>
  <div class="col-sm-2 status"> </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10 col-md-offset-9">
    <%= f.submit "Sign Up", class: "btn btn-default" %>
  </div>
</div>

<% end %>
