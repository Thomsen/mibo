<%= form_for :user, url: user_create_path do |f| %>

<% if @user.errors.any? %>

<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved: </h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li> <%= msg %></li>
    <% end %>
  </ul>
</div>

<% end %>

<div class="form-group">
  <%= f.label :loginname, :input_html => {:class => "col-sm-2 control-label"} %>
  <div class="col-sm-10"
    <%= f.text_field :loginname %>
  </div>
</div>

<div class="form-group">
  <%= f.label :username, :input_html => {:class => "col-sm-2 control-label"} %>
  <div class="col-sm-10"
    <%= f.text_field :username %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password, :input_html => {:class => "col-sm-2 control-label"} %>
  <div class="col-sm-10"
    <%= f.password_field :password %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Confirm Password", :input_html => {:class => "col-sm-2 control-label"} %>
  <div class="col-sm-10"
    <%= f.password_field :password_confirm %>
  </div>
</div>

<%= f.submit "Sign Up", class: "btn btn-default" %>

<% end %>
